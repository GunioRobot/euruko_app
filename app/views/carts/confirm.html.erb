<% title 'Confirm your Purchase' %>

<% form_tag( @cart.paypal_url( complete_cart_url(@cart), notificate_cart_url(@cart) ) ) do %>
  <ul>
  <% @cart.events.each do |event| %>
    <li>        
      <%= link_to event.name, event_path(event) %> (<%= event.price_euros %>€)
    </li>
  <% end %>
  </ul>
  
  <p>TOTAL: <span id="total"><%= @cart.total_price_on_euros %>€</span></p>
  
  <p>
    <%= @cart.invoice_info %>
  </p>
  
  <p>
    <%= submit_tag "Pay, throught PayPal", :disabled => false, :disable_with => "Please wait..." %> |
    <%= link_to 'Modify cart', new_cart_path %>
  </p>
<% end %>