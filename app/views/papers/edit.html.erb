<h1>Editing paper</h1>

<% form_for(@paper) do |f| %>
  <%= f.error_messages %>

  <%= render :partial => 'basic_form', :locals => { :f => f } %>

  <p>
    <%= f.submit "Update attributes above" %>
  </p>
<% end %>

<h3>Photo</h3>
<p>File types allowed: 'image/jpeg', 'image/png'. Max file size: 1MB. Width: between 576px and 1000px.
  Height: between 150px and 300px.</p>
<%= render :partial => 'photo_edit', :locals => { :paper => @paper } %>

<h3>Speakers</h3>
<div id="speakers">
  <%= render :partial => 'speakers_edit', :locals => { :paper => @paper } %>
</div>

<h3>Status</h3>
<%= render :partial => 'status_edit', :locals => { :paper => @paper } %>

<h3>Resources</h3>
<%= render :partial => 'resources_edit', :locals => { :paper => @paper } %>
  

<%= link_to 'Show', @paper %> |
<%= link_to 'Back', papers_path %>
