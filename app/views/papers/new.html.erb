<% if current_user.public_profile? -%>

<h1>New paper</h1>

<% form_for(@paper) do |f| %>
  <%= f.error_messages %>
  
  <%= render :partial => 'basic_form', :locals => { :f => f } %>
  
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', papers_path %>

<% else -%>
  You can't submit papers unless you set <%= link_to 'your profile', edit_user_path(current_user) %> as public.
<% end -%>