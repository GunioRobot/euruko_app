<h2><%= @paper.title %></h2>

<h3>Speakers</h3>
<p>
  <ul>
      <% @paper.speakers.collect{ |s| s.user }.each do |user| %>
        <li>
          <%=
            gravatar(
              user.email, 
              :size => 32, 
              :default => "#{base_url}/images/avatar.png",
              :class => 'avatar',
              :alt => "avatar de #{user.name}"
            )
          %>
          <%= link_to user.name, user %>
        </li>
      <% end %>
  </ul>
</p>

<h3>Date</h3>
<p>
  at <%= @paper.date %> 
  on <%= @paper.room.nil? ? 'not room yet' : @paper.room.name %>
</p>

<h3>Description</h3>
<p><%= @paper.description %></p>

<h3>Resources:</h3>
<p>
  <ul>
    <% @paper.resources.each do |resource| %>
      <li><%= link_to resource.url_link, resource.url_link %></li>
    <% end %>
  </ul>
</p>

<h3>Valoration</h3>
<p>
  <ul>
    <% @paper.votes.each do |vote| %>
      <li><%= vote.user.name %> => <%= vote.points %></li>
    <% end %>
  </ul>
</p>
<h4>My valoration</h4>
<p>
  <%= render :partial => 'papers/votes', :locals => { :paper => @paper } %>
</p>

<h3>Attendees</h3>
<div>
  <ul>
    <% @paper.attendees.each do |attendee| %>
      <li><%= attendee.user.name %></li>
    <% end %>
  </ul>
  <%= render :partial => 'papers/attendees', :locals => { :paper => @paper } %>  
</div>

<h3>Comments</h3>
<div>
  <ul>
    <% @paper.comments.each do |comment| %>
      <li>
        <div>
          <%=
            gravatar(
              comment.user.email, 
              :size => 32, 
              :default => "#{base_url}/images/avatar.png",
              :class => 'avatar',
              :alt => "avatar de #{comment.user.name}"
            )
          %>
        </div>
        <div><strong><%= comment.user.name %></strong> say on <%= comment.created_at %></div>
        <p><%= comment.text %></p>
      </li>
    <% end %>
  </ul>
</div>

<% if logged_in? %>
  <h4>New Comment</h4>
  <div>
    <% form_for [@paper, Comment.new] do |f| -%>
      <%= f.error_messages %>

      <%= f.text_area :text %>
      <%= f.submit "Submit", :disable_with => 'Submiting...' %>
    <% end -%>
  </div>
<% end %>


<div>
  <% if logged_in? && current_user.is_speaker_on_or_admin?( @paper ) %>
    <%= link_to 'Edit', edit_paper_path(@paper) %> |
  <% end %>
  <%= link_to 'Back', papers_path %>
</div>
