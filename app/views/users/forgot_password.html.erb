<% title "Reseting Password" %>

<hr />

<h3><%= yield(:title) %></h3>

<% form_tag url_for(:action => 'forgot_password') do %>
  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, "", :size => 50 %>
  </p>
  <p>
    <%= submit_tag 'Get a new password' %>
  </p>
<% end %>

